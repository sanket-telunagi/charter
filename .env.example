# Charter Configuration
# Copy this file to .env and customize as needed

# Output directory for generated charts
CHARTER_OUTPUT_DIR=output

# Default output format (png, svg, pdf, jpeg)
CHARTER_DEFAULT_FORMAT=png

# Default theme (default, dark, light, minimal, vibrant)
CHARTER_DEFAULT_THEME=default

# Default DPI for raster formats
CHARTER_DEFAULT_DPI=150

# Default figure size (width,height in inches)
CHARTER_DEFAULT_FIGSIZE=10.0,6.0
